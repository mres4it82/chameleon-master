platform :ios, '12.0'

# Set the correct path to your Flutter SDK directory
flutter_root = File.expand_path('../flutter', __FILE__)

# Load Flutter environment
load File.join(flutter_root, 'packages/flutter_tools/bin/xcode_backend/flutter_export_environment.rb') if File.exist?(File.join(flutter_root, 'packages/flutter_tools/bin/xcode_backend/flutter_export_environment.rb'))

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Add Flutter as a pod
  pod 'Flutter', :path => flutter_root

  # Your other dependencies
  pod 'DKPhotoGallery', :modular_headers => true
  pod 'SDWebImage', :modular_headers => true

  target 'RunnerTests' do
    inherit! :search_paths
  end
end
