platform :ios, '12.0'

flutter_application_path = File.expand_path('..', Dir.pwd) + '/flutter'
load File.join(flutter_application_path, 'flutter_export_environment.rb') if File.exist?(File.join(flutter_application_path, 'flutter_export_environment.rb'))

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Add Flutter as a pod
  pod 'Flutter', :path => flutter_application_path

  # Your other dependencies
  pod 'DKPhotoGallery', :modular_headers => true
  pod 'SDWebImage', :modular_headers => true

  target 'RunnerTests' do
    inherit! :search_paths
  end
end
